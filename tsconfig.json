{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}